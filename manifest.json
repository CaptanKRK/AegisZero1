{
  "manifest_version": 3,
  "name": "AEGIS-CERO1",
  "version": "0.1.0",
  "description": "Landing + sidebar extension with multiple passive checkers",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "tabs",
    "notifications"
  ],
  "host_permissions": [
    "https://*.ebay.com/*",
    "https://*.youtube.com/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.ebay.com/*"],
      "js": ["content-scripts/ebay_content.js"]
    },
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content-scripts/youtube_content.js"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["content-scripts/tos_content.js", "content-scripts/ad_blocker.js"],
      "run_at": "document_idle"
    }
  ]
}
